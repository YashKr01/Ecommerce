<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SingleProductActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
        app:title="Sweaters &amp; Cardigans"
        app:titleTextColor="@color/black" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:background="@color/grey_300"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_300">


            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                </androidx.viewpager.widget.ViewPager>

                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/viewpager"
                    android:layout_marginStart="@dimen/sb_size_20"
                    android:layout_marginTop="@dimen/sb_size_20"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sb_text_size_17" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/product_name"
                    android:layout_marginStart="@dimen/sb_size_20"
                    android:layout_marginTop="@dimen/sb_size_13"
                    android:fontFamily="@font/gothambold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sb_text_size_17"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/share"
                    android:layout_width="@dimen/sb_size_30"
                    android:layout_height="@dimen/sb_size_30"
                    android:layout_below="@+id/viewpager"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="@dimen/sb_size_10"
                    android:background="@drawable/ic_share"
                    android:scaleType="fitCenter" />

                <RatingBar
                    android:id="@+id/ratingBar4"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/share"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/sb_size_10"
                    android:layout_marginEnd="@dimen/sb_size_20"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:progressBackgroundTint="@color/grey_500"
                    android:progressTint="#FFD700"
                    android:rating="4.8"
                    android:secondaryProgressTint="@null" />

                <TextView
                    android:id="@+id/color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/price"
                    android:layout_marginStart="@dimen/sb_size_20"
                    android:layout_marginTop="@dimen/sb_size_15"
                    android:fontFamily="@font/gothambold"
                    android:text="Color: Red"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sb_text_size_15" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/colorRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/color"
                    android:layout_marginHorizontal="@dimen/sb_size_20"
                    android:layout_marginTop="@dimen/sb_size_10" />

                <TextView
                    android:id="@+id/sizeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/colorRecyclerView"
                    android:layout_marginStart="@dimen/sb_size_20"
                    android:layout_marginTop="@dimen/sb_size_15"
                    android:text="Size"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sb_text_size_15" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/sizeRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/sizeTextView"
                    android:layout_marginHorizontal="@dimen/sb_size_20"
                    android:layout_marginTop="@dimen/sb_size_10"
                    android:layout_marginBottom="@dimen/sb_size_15" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayout1"
                android:layout_marginTop="@dimen/sb_size_10"
                android:background="@color/white">

                <TextView
                    android:id="@+id/shippingToTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/sb_size_20"
                    android:layout_marginTop="@dimen/sb_size_15"
                    android:text="Shipping to"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sb_text_size_16" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/sb_size_30"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/sb_size_10"
                    android:layout_marginEnd="@dimen/sb_size_20"
                    android:background="@drawable/rect_back_button"
                    android:paddingHorizontal="@dimen/sb_size_10"
                    android:text="Change pincode"
                    android:textAllCaps="false" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/shippingToTextView"
                    android:layout_marginStart="@dimen/sb_size_20"
                    android:layout_marginTop="@dimen/sb_text_size_15"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/sb_size_10"
                        android:drawablePadding="@dimen/sb_size_10"
                        android:text="Free standard shipping"
                        android:padding="@dimen/sb_size_10"
                        android:textColor="@color/black"
                        app:drawableStartCompat="@drawable/ic_shipping_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/sb_size_20"
                        android:drawablePadding="@dimen/sb_size_10"
                        android:gravity="start|center"
                        android:padding="@dimen/sb_size_10"
                        android:text="Return Policy"
                        android:textColor="@color/black"
                        app:drawableStartCompat="@drawable/ic_return_size" />
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayout2"
                android:layout_marginTop="@dimen/sb_size_10"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="@dimen/sb_size_20">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sb_text_size_17" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/sb_size_10"
                    android:text="Description"
                    android:textColor="@color/black" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linearLayout"
                android:layout_marginTop="@dimen/sb_size_10"
                android:background="@color/white"
                android:padding="@dimen/sb_size_20">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reviews(3238)"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/viewAllReviewTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="view all"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/viewAllReviewTextView"
                    android:layout_marginTop="@dimen/sb_size_10"
                    app:cardBackgroundColor="@color/grey_200">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/sb_size_10">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/reviewTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="4.9"
                                android:layout_marginBottom="@dimen/sb_size_5"
                                android:textColor="@color/black"
                                android:textSize="@dimen/sb_text_size_18"
                                android:textStyle="bold" />

                            <RatingBar
                                android:id="@+id/ratingBar"
                                style="@style/Widget.AppCompat.RatingBar.Small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:isIndicator="true"
                                android:numStars="5"
                                android:progressBackgroundTint="@color/grey_500"
                                android:progressTint="#FFD700"
                                android:rating="4.9"
                                android:secondaryProgressTint="@null" />

                        </LinearLayout>


                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="@dimen/sb_size_10"
                            android:gravity="center"
                            android:text="Did the item sell well?"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textView"
                            android:layout_alignStart="@+id/textView"
                            android:layout_marginTop="@dimen/sb_size_10"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/sb_size_10"
                                    android:text="Small"
                                    android:textColor="@color/black" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/sb_size_5"
                                    android:layout_marginBottom="@dimen/sb_size_10"
                                    android:text="True to size"
                                    android:textColor="@color/black" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Large"
                                    android:textColor="@color/black" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="105dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="@dimen/sb_size_3"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/sb_size_10"
                                    android:background="@color/black"
                                    android:textColor="@android:color/transparent" />

                                <TextView
                                    android:layout_width="@dimen/sb_size_93"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/sb_size_10"
                                    android:background="@color/black"
                                    android:textColor="@android:color/transparent" />

                                <TextView
                                    android:layout_width="@dimen/sb_size_5"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/sb_size_10"
                                    android:background="@color/black"
                                    android:textColor="@android:color/transparent" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingStart="@dimen/sb_size_10">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/sb_size_10"
                                    android:text="3%"
                                    android:textColor="@color/black" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/sb_size_10"
                                    android:text="93%"
                                    android:textColor="@color/black" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="5%"
                                    android:textColor="@color/black" />
                            </LinearLayout>

                        </LinearLayout>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/linear"
                    android:layout_below="@+id/cardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginEnd="@dimen/sb_size_10"
                        android:text="Name"/>

                    <RatingBar
                        android:id="@+id/ratingBar2"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:progressBackgroundTint="@color/grey_500"
                        android:progressTint="#FFD700"
                        android:rating="4.9"
                        android:secondaryProgressTint="@null" />

                </LinearLayout>

                <TextView
                    android:id="@+id/reviewDescTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linear"
                    android:layout_marginTop="@dimen/sb_size_5"
                    android:textColor="@color/black"
                    android:lineSpacingExtra="@dimen/sb_size_2"
                    android:letterSpacing="0.08"
                    android:text="@string/loren_ipsum_placeholder_text"/>

                <LinearLayout
                    android:id="@+id/linear2"
                    android:layout_below="@+id/reviewDescTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sb_size_20"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginEnd="@dimen/sb_size_10"
                        android:text="Name"/>

                    <RatingBar
                        android:id="@+id/ratingBar3"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:progressBackgroundTint="@color/grey_500"
                        android:progressTint="#FFD700"
                        android:rating="4.9"
                        android:secondaryProgressTint="@null" />

                </LinearLayout>

                <TextView
                    android:id="@+id/reviewDescTextView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linear2"
                    android:layout_marginTop="@dimen/sb_size_5"
                    android:textColor="@color/black"
                    android:lineSpacingExtra="@dimen/sb_size_2"
                    android:letterSpacing="0.08"
                    android:text="@string/loren_ipsum_placeholder_text"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sb_size_10"
                android:layout_below="@+id/relativeLayout3"
                android:layout_alignParentBottom="true"
                android:padding="@dimen/sb_size_10"
                android:background="@color/white">

                <ImageButton
                    android:layout_width="@dimen/sb_size_35"
                    android:layout_height="@dimen/sb_size_35"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center|start"
                    android:layout_marginEnd="@dimen/sb_size_10"
                    android:background="@drawable/ic_favourites"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/black"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="Add to bag"/>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>