<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="@dimen/sb_size_20"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="@dimen/sb_size_20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/pinCodeEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="PinCode"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/sb_size_10"
            android:layout_marginVertical="@dimen/sb_size_20"
            android:inputType="number"
            android:textColorHint="@color/black" />

        <Button
            android:id="@+id/changePinCodeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change"
            android:background="@color/black"
            android:textColor="@color/white"
            android:layout_marginVertical="@dimen/sb_size_20"
            android:layout_weight="0"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>