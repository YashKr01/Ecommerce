<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/search_product_image"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginHorizontal="@dimen/sb_size_4"
        android:layout_marginVertical="@dimen/sb_size_4"
        android:background="@color/blue_grey_900"
        android:contentDescription="@string/search_product"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/searched_product_name"
        style="@style/MediumText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sb_size_12"
        android:fontFamily="@font/gothamblack"
        tools:text="â‚¹ 1000"
        android:textColor="@color/blue_grey_900"
        android:textSize="@dimen/sb_text_size_16"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/search_product_image"
        app:layout_constraintStart_toStartOf="@+id/search_product_image"
        app:layout_constraintTop_toBottomOf="@+id/search_product_image" />


</androidx.constraintlayout.widget.ConstraintLayout>