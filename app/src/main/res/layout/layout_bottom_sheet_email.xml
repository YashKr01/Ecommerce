<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheet"
    android:background="@drawable/bottomsheet_background"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/verifyTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sb_size_5"
        android:gravity="center"
        android:padding="@dimen/sb_size_5"
        android:text="Verify Email"
        android:textColor="@color/black"
        android:textSize="@dimen/sb_size_18"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/sb_size_5"
        android:layout_marginTop="@dimen/sb_size_5"
        android:textColor="@color/black"
        android:textSize="@dimen/sb_size_16"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/verifyTextView" />

    <Button
        android:id="@+id/sendOtp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/sb_size_20"
        android:text="Send OTP"
        android:layout_marginVertical="@dimen/sb_size_30"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>