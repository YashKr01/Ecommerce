<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"

    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="@dimen/sb_size_30"
        android:layout_height="@dimen/sb_size_30"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/sb_size_15"
        android:layout_margin="@dimen/sb_size_10"
        app:cardBackgroundColor="@color/grey_400"
        app:cardElevation="@dimen/sb_size_0"
        app:cardCornerRadius="@dimen/sb_size_15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            app:cardCornerRadius="@dimen/sb_size_15"
            app:cardElevation="@dimen/sb_size_0"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <CheckBox
            android:id="@+id/colorButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="@dimen/sb_size_0"
            android:button="@null"/>
        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>