<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@color/white">

    <TextView
        android:id="@+id/dummySortBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sort_by"
        android:textSize="@dimen/sb_text_size_18"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/sb_size_18"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/sb_size_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dummySortBy">

        <LinearLayout
            android:id="@+id/lyt_MostPopular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/sb_size_16"
            android:focusable="true">

            <RadioButton
                android:id="@+id/rdbMostPopular"
                android:layout_width="wrap_content"
                android:buttonTint="@color/blue_grey_900"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Most Popular"
                android:textSize="@dimen/sb_text_size_14"
                android:textColor="@color/black" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="@dimen/sb_size_8"
            android:background="@color/grey_300"/>

        <LinearLayout
            android:id="@+id/lyt_NewArrival"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/sb_size_16"
            android:focusable="true">

            <RadioButton
                android:id="@+id/rdbNewArrival"
                android:layout_width="wrap_content"
                android:buttonTint="@color/blue_grey_900"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Arrival"
                android:textSize="@dimen/sb_text_size_14"
                android:textColor="@color/black" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="@dimen/sb_size_8"
            android:background="@color/grey_300"/>

        <LinearLayout
            android:id="@+id/lyt_PriceHtoL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/sb_size_16"
            android:focusable="true">

            <RadioButton
                android:id="@+id/rdbPriceHtoL"
                android:layout_width="wrap_content"
                android:buttonTint="@color/blue_grey_900"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sb_text_size_14"
                android:text="Price High to Low"
                android:textColor="@color/black" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="@dimen/sb_size_8"
            android:background="@color/grey_300"/>

        <LinearLayout
            android:id="@+id/lyt_PriceLtoH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/sb_size_16"
            android:focusable="true">

            <RadioButton
                android:id="@+id/rdbPriceLtoH"
                android:layout_width="wrap_content"
                android:buttonTint="@color/blue_grey_900"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price Low to High"
                android:textSize="@dimen/sb_text_size_14"
                android:textColor="@color/black" />
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>